{
  "name": "vodoo",
  "displayName": "vodoo",
  "description": "VS Code Todo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vodoo.helloWorld",
    "onCommand:vodoo.refresh",
    "onCommand:vodoo.askQuestion",
    "onCommand:vodoo.addTodo",
    "onCommand:vodoo.authenticate",
    "onView:vodoo-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vodoo-sidebar-view",
          "title": "Vodoo",
          "icon": "media/checklist.svg"
        }
      ]
    },
    "views": {
      "vodoo-sidebar-view": [
        {
          "type": "webview",
          "id": "vodoo-sidebar",
          "name": "Vodoo",
          "icon": "media/checklist.svg",
          "contextualTitle": "Vodoo"
        }
      ]
    },
    "commands": [
      {
        "command": "vodoo.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vodoo.askQuestion",
        "category": "Vodoo",
        "title": "Ask Question"
      },
      {
        "command": "vodoo.refresh",
        "category": "Vodoo",
        "title": "Refresh"
      },
      {
        "command": "vodoo.authenticate",
        "category": "Vodoo",
        "title": "Authenticate"
      },
      {
        "command": "vodoo.addTodo",
        "category": "Vodoo",
        "title": "Add Todo from Selection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@tsconfig/svelte": "^2.0.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/polka": "^0.5.3",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.42.1",
    "svelte-check": "^2.2.4",
    "svelte-preprocess": "^4.7.4",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "polka": "^0.5.2"
  }
}
